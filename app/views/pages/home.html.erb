<%= render 'shared/banner' %>
  <div class="container my-5">
    <div class="d-flex justify-content:center;">
      <% @flats.each do |flat| %>
      <div class="card m-3" style="width: 30rem;">
        <img src="<%= flat.image %>" class="card-img-top" alt="<%= flat.name %>">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.description %> <br> Adresse 📍: <%= flat.address %></p>
          <%= flat.price %>€ <br><br>
          <%= link_to "Voir le logement", flat_path(flat), class: 'btn btn-success text-white' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
